<%= render "shared/errors", obj: @url %>
<div class="row">
  <div class="col-xs-12 col-md-8 col-md-offset-2">
    <div class="bs-example" data-example-id="simple-horizontal-form">
      <%= form_for @url , :html => {:class => 'form-horizontal', role: 'form'} do |f| %>
        <div class="form-group">
          <%= f.label :real_url , :class => 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <%= f.text_field :real_url , :class => 'form-control input-lg',placeholder: "Url" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit "Generate Awesome url ",:class => "btn btn-primary btn-lg" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
